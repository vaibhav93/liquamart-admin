{
  "name": "product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
      },
    "id": {
        "type": "string",
        "id": true
      },
    "description":{
        "type":"string"
    },
    "imgUrls":"array",
    "featured":{
        "type":"boolean",
        "default":false
    },
    "latest":{
        "type":"boolean",
        "default":false
    }

  },
  "validations": [],
  "relations": {
    "subcategories": {
      "type": "hasAndBelongsToMany",
      "model": "subcategory",
      "foreignKey": ""
    },
    "purchases": {
      "type": "hasMany",
      "model": "purchase",
      "foreignKey": ""
    },
    "favourites": {
      "type": "hasMany",
      "model": "favourite",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
