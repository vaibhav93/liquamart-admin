      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "subcategories": {
      "type": "hasAndBelongsToMany",
      "model": "subcategory",
      "foreignKey": ""
    },
    "purchases": {
      "type": "hasMany",
      "model": "purchase",
      "foreignKey": ""
    },
    "favourites": {
      "type": "hasMany",
      "model": "favourite",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
